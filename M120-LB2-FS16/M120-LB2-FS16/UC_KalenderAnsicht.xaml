<UserControl x:Class="M120_LB2_FS16.UC_KalenderAnsicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120_LB2_FS16"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="700" Height="500" Margin="20">
    <Grid x:Name="kalender" Width="700" Height="1500" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1440"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Montag"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Dienstag"/>
        <Label Grid.Row="0" Grid.Column="2" Content="Mittwoch"/>
        <Label Grid.Row="0" Grid.Column="3" Content="Donnerstag"/>
        <Label Grid.Row="0" Grid.Column="4" Content="Freitag"/>
        <Label Grid.Row="0" Grid.Column="5" Content="Samstag"/>
        <Label Grid.Row="0" Grid.Column="6" Content="Sonntag"/>
        <Rectangle x:Name="montag" Grid.Row="1" Grid.Column="0" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="dienstag" Grid.Row="1" Grid.Column="1" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="mittwoch" Grid.Row="1" Grid.Column="2" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="donnerstag" Grid.Row="1" Grid.Column="3" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="freitag" Grid.Row="1" Grid.Column="4" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="samstag" Grid.Row="1" Grid.Column="5" Height="1440" Width="100"></Rectangle>
        <Rectangle x:Name="sonntag" Grid.Row="1" Grid.Column="6" Height="1440" Width="100"></Rectangle>
    </Grid>
</UserControl>
